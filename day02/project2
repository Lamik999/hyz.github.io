import numpy as np
import matplotlib.pyplot as plt
 
# 创建时间轴
t = np.linspace(0, 1, 500)  # 从0到1秒，共500个点
 
# 生成正弦波信号
signal = np.sin(2 * np.pi * 5 * t)  # 频率为5Hz的正弦波
 
# 绘制信号图像
plt.figure(figsize=(10, 4))  # 设置图像大小
plt.plot(t, signal)  # 绘制信号
plt.title('Signal Wave')  # 设置标题
plt.xlabel('Time [s]')  # 设置x轴标签
plt.ylabel('Amplitude')  # 设置y轴标签
plt.grid(True)  # 显示网格
plt.show()  # 显示图像
